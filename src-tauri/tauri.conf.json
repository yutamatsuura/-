{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Kyosho Backup",
  "version": "0.1.1",
  "identifier": "com.yutamatsuura.kyosho-backup",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Kyosho Backup - サーバーバックアップ自動化ツール",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "label": "main",
        "visible": true,
        "center": true,
        "focus": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "ipc: http://ipc.localhost",
        "script-src": "'self' 'unsafe-inline' 'unsafe-eval'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "font-src": "'self'"
      },
      "capabilities": ["backup-app-capability"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Utility",
    "copyright": "Copyright © 2025 Yuta Matsuura",
    "shortDescription": "エックスサーバー専用バックアップ自動化ツール",
    "longDescription": "Kyosho Backupはエックスサーバー専用のデスクトップアプリケーションです。SSH/SFTP接続でサーバーファイルを安全かつ効率的にバックアップします。",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "ja-JP"
      }
    }
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "shell": {
      "open": true
    }
  }
}